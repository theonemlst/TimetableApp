<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/timetbl_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_action_navigation"
        android:layout_centerVertical="true"
        android:contentDescription="@string/list_item_image"
        />

    <TextView
        android:id="@+id/country_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/timetbl_item_icon"
        android:layout_toEndOf="@+id/timetbl_item_icon"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text=""
        android:textAllCaps="false"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/city_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/country_title"
        android:layout_alignStart="@+id/country_title"
        android:layout_alignLeft="@+id/country_title"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text=""
        android:textAllCaps="false"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/station_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_title"
        android:layout_alignStart="@+id/country_title"
        android:layout_alignLeft="@+id/country_title"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text=""
        android:textAllCaps="false"
        android:textSize="12sp"
        android:textStyle="normal" />

</RelativeLayout>